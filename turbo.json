{
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NEXTAUTH_SECRET", "NEXTAUTH_URL", "DATABASE_URL", "JWT_SECRET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

